<div class="modal fade" id="commentsChosen" data-backdrop="static" tabindex="-1" role="dialog"
    aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header sticky-top bg-white">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"
                    onclick="window.location.href='/'">
                    <span aria-hidden="true" class="close-button">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-lg-10 mx-auto my-0 px-3 py-0">
                    <h4 class="text-center mt-3">Your Comments</h4>
                    {{#each post}}
                    <section class="comment my-1 comment-color" id="{{id}}">
                        <div class="meta">
                            <a href="/recipe/{{post.id}}" class=" meta comment-post">{{post.name}}</a> on {{format_date
                            createdAt}}
                        </div>
                        <div id="textarea-{{id}}">
                            <div class="text" id="text-{{id}}">
                                {{text}}
                            </div>
                            <span><a href="#" class="edit-delete" id="editComment">edit</a></span>
                            <span><a href="#" class="edit-delete" id="deleteComment">delete</a></span>
                        </div>
                    </section>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</div>


