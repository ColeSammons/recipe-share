<div class="modal fade" id="signupBackdrop" data-backdrop="static" tabindex="-1" role="dialog"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="close-button">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h3 class="text-center">Signup</h3>
                    <form>
                        <!-- username -->
                        <div class="form-group mb-0">
                            <label for="username"></label>
                            <input type="username" autocomplete="off" maxlength="20" id="username"
                                placeholder="Username" class="form-control login" required />
                            <small id="emailHelp" class="form-text text-muted">
                                &nbsp;&nbsp;&nbsp; *Username must be 20 characters or less.</small>
                        </div>
                        <!-- email -->
                        <div class="form-group mb-0">
                            <label for="email"></label>
                            <input type="email" autocomplete="off" maxlength="200" id="userEmail" placeholder="Email"
                                class="form-control login" aria-describedby="emailHelp" required />
                        </div>
                        <!-- password -->
                        <div class="form-group mb-0">
                            <label for="InputPassword1"></label>
                            <input type="password" class="form-control login" id="userPassword" autocomplete="off"
                                maxlength="50" placeholder="Password" required />
                        </div>
                        <!-- login link -->
                        <div class="text-center">
                            <p class="my-1">Have an account?</p>
                            <a href="#" id="loginAccount" data-toggle="modal" data-target="#signupBackdrop"
                                class="nextModal">Login here</a>
                        </div>
                        <!-- register -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-black mt-3" id="signup-form">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>